<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.posin.postmenudemo.MainActivity">

    <Button
        android:id="@+id/btn_init_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="初始化副屏布局"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_init_ui"
        android:layout_toStartOf="@id/btn_init_ui"
        android:padding="20dp"
        android:text="增加菜品"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_add_menu"
        android:layout_toStartOf="@id/btn_add_menu"
        android:padding="20dp"
        android:text="增加菜品2"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn_init_ui"
        android:layout_toRightOf="@id/btn_init_ui"
        android:padding="20dp"
        android:text="减少菜品"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn_sub_menu1"
        android:layout_toRightOf="@id/btn_sub_menu1"
        android:padding="20dp"
        android:text="减少菜品2"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_init_ui"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:text="支付"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_clear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_init_ui"
        android:layout_toRightOf="@id/btn_pay"
        android:layout_toEndOf="@id/btn_pay"
        android:padding="20dp"
        android:text="清空菜单栏"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_send_all_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:text="整单发送"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_send_all_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_toRightOf="@id/btn_send_all_menu"
        android:layout_toEndOf="@id/btn_send_all_menu"
        android:layout_centerHorizontal="true"
        android:text="整单发送2"
        android:textSize="22sp" />
</RelativeLayout>
