<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.posin.postmenudemo.MainActivity">

    <Button
        android:id="@+id/btn_add_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖鸡"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_1"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖鸭"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_add_1"
        android:layout_toRightOf="@id/btn_add_1"
        android:padding="20dp"
        android:text="黄焖牛"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_2"
        android:layout_toEndOf="@id/btn_add_1"
        android:layout_toRightOf="@id/btn_add_1"
        android:padding="20dp"
        android:text="黄焖羊"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_add_2"
        android:layout_toRightOf="@id/btn_add_2"
        android:padding="20dp"
        android:text="黄焖猪"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_3"
        android:layout_toEndOf="@id/btn_add_2"
        android:layout_toRightOf="@id/btn_add_2"
        android:padding="20dp"
        android:text="黄焖狗"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/btn_add_3"
        android:layout_toRightOf="@id/btn_add_3"
        android:padding="20dp"
        android:text="黄焖马"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/btn_add_3"
        android:layout_toRightOf="@id/btn_add_3"
        android:layout_below="@id/btn_add_4"
        android:padding="20dp"
        android:text="黄焖蛇"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_add_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_add_4"
        android:layout_toRightOf="@id/btn_add_4"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖兔"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_add_4"
        android:layout_toRightOf="@id/btn_add_4"
        android:layout_below="@id/btn_add_5"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖鼠"
        android:textSize="22sp" />


    <Button
        android:id="@+id/btn_add_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_add_1"
        android:layout_toStartOf="@id/btn_add_1"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖龙"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_add_1"
        android:layout_toStartOf="@id/btn_add_1"
        android:layout_below="@id/btn_add_6"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖猴"
        android:textSize="22sp" />



    <Button
        android:id="@+id/btn_add_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_add_6"
        android:layout_toStartOf="@id/btn_add_6"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="黄焖123"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_sub_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_add_6"
        android:layout_toStartOf="@id/btn_add_6"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_add_7"
        android:padding="20dp"
        android:text="黄焖456"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="支付"
        android:textSize="22sp" />
</RelativeLayout>
